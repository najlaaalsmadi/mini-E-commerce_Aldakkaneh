@model IEnumerable<mini_E_commerce_Aldakkaneh.Models.Product>

@{
    ViewBag.Title = "تفاصيل المنتج";
}

<!-- Bootstrap CSS -->
<style>
    .flip-card {
        background-color: transparent;
        width: 300px;
        height: 400px;
        perspective: 1000px;
        margin: 20px auto;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .flip-card-front {
        background-color: white;
        color: black;
    }

    .flip-card-back {
        background-color: #333;
        color: white;
        transform: rotateY(180deg);
    }

    .flip-card img {
        width: 100%;
        height: 60%;
        object-fit: cover;
    }

    .card-body {
        padding: 10px;
    }

    .card-title, .card-price {
        margin-bottom: 10px;
    }

    .btn {
        background-color: midnightblue;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: blue;
        }
</style>

<div class="container">
    

    <!-- قسم المنتجات -->
   
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="../../imges/@item.imgprodect" alt="Product Image">
                            <div class="card-body">
                                <h3 class="card-title">@item.description</h3>
                            </div>
                        </div>
                        <div class="flip-card-back">
                            <div class="card-body">
                                <h4 class="card-title">@item.description</h4>
                                <p class="card-price">السعر: @item.price</p>
                                <p>التصنيف: @item.Category.name</p>

                                <br />  <br />
                                @if (Session["CustomerName"] != null)
                                {
                                    <a href="@Url.Action("prodect_detilies", "Products", new { id = item.product_id })" class="btn btn-lg" style="background-color: blueviolet; color: white;">
                                        الذهاب الى تفاصيل

                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Login", "Customers", new { id = item.product_id })" class="btn btn-lg" style="background-color: blueviolet; color: white;">
                                        دخول للموقع
                                    </a>}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap JS and dependencies -->

